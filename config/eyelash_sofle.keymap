// -*- mode: c; c-basic-offset: 4; tab-width: 4; indent-tabs-mode: nil; -*-
#include <dt-bindings/zmk/mouse.h>
#include <input/processors.dtsi>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>
#include <dt-bindings/zmk/rgb.h>

#define ZMK_POINTING_DEFAULT_MOVE_VAL 900   // default: 600
#define ZMK_POINTING_DEFAULT_SCRL_VAL 20    // default: 10

/ {
    behaviors {
        mmv {
            acceleration-exponent = <1>;
            time-to-max-speed-ms = <900>;
            delay-ms = <0>;
        };

        msc {
            acceleration-exponent = <1>;
            time-to-max-speed-ms = <400>;
            delay-ms = <0>;
        };

        // Add this behavior for ZMK Studio
        studio_unlock: studio_unlock {
            compatible = "zmk,behavior-studio-unlock";
            label = "STUDIO_UNLOCK";
            #binding-cells = <0>;
        };
    };

    combos {
        compatible = "zmk,combos";
        require-prior-idle-ms = <50>;
        timeout-ms = <50>;

        // Layer 1 Media Combos
        combo_mute {                      // S+X = mute (layer 1 only)
            key-positions = <28 41>;      // S is 28, X is 41
            bindings = <&kp C_MUTE>;
            layers = <1>;
        };
        combo_play_pause {                // A+Z = play/pause (layer 1 only)
            key-positions = <27 40>;      // A is 27, Z is 40
            bindings = <&kp C_PLAY_PAUSE>;
            layers = <1>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        layer_0 {
            display-name = "MAIN";
            bindings = <
&kp GRAVE        &kp N1           &kp N2           &kp N3           &kp N4           &kp N5           &kp C_VOLUME_UP      &kp N6           &kp N7           &kp N8           &kp N9           &kp N0           &kp DELETE
&mt LGUI TAB     &kp Q            &kp W            &kp E            &kp R            &kp T            &kp C_VOLUME_DOWN    &kp Y            &kp U            &kp I            &kp O            &kp P            &kp BACKSPACE
&mt LCTRL ESC    &kp A            &kp S            &kp D            &kp F            &kp G            &kp C_PLAY_PAUSE     &kp H            &kp J            &kp K            &kp L            &kp SEMICOLON    &mt RCTRL SQT
&kp LSHIFT       &kp Z            &kp X            &kp C            &kp V            &kp B            &kp C_NEXT           &kp N            &kp M            &kp COMMA        &kp PERIOD       &kp FSLH         &kp RIGHT_SHIFT
&none            &none            &none            &kp LALT         &mo 1            &kp SPACE        &kp C_MUTE           &kp RETURN       &mo 2            &kp RALT         &none            &none
            >;
        };

        layer_1 {
            display-name = "LOWER";
            bindings = <
&kp F12          &kp F1           &kp F2           &kp F3           &kp F4           &kp F5           &trans               &kp F6           &kp F7           &kp F8           &kp F9           &kp F10          &kp F11
&trans           &none            &none            &none            &kp LPAR         &kp LT           &trans               &kp GT           &kp RPAR         &none            &none            &kp PSCRN        &trans
&trans           &kp C_NEXT       &kp C_VOL_UP     &kp GRAVE        &kp LBKT         &kp EQUAL        &trans               &kp MINUS        &kp RBKT         &none            &none            &none            &trans
&trans           &kp C_PREV       &kp C_VOL_DN     &kp TILDE        &kp LBRC         &kp PLUS         &trans               &kp UNDER        &kp RBRC         &none            &none            &kp BSLH         &kp PIPE
&none            &none            &none            &trans           &trans           &trans           &trans               &trans           &mo 3            &trans           &none            &none
            >;
        };

        layer_2 {
            display-name = "RAISE";
            bindings = <
&none            &bt BT_SEL 0     &bt BT_SEL 1     &bt BT_SEL 2     &bt BT_SEL 3     &bt BT_SEL 4     &trans               &bt BT_CLR       &none            &none            &none            &none            &none
&trans           &none            &none            &none            &none            &none            &trans               &none            &none            &none            &none            &none            &trans
&trans           &none            &none            &none            &none            &none            &trans               &kp LEFT         &kp DOWN         &kp UP           &kp RIGHT        &none            &trans
&trans           &none            &none            &none            &none            &none            &trans               &kp HOME         &kp PG_DN        &kp PG_UP        &kp END          &kp BSLH         &kp PIPE
&none            &none            &none            &kp DELETE       &mo 3            &kp BSPC         &trans               &trans           &trans           &trans           &none            &studio_unlock
            >;
        };

        layer_3 {
            display-name = "RGB";
            bindings = <
&none            &bt BT_DISC 0    &bt BT_DISC 1    &bt BT_DISC 2    &bt BT_DISC 3    &bt BT_DISC 4    &trans               &none            &none            &none            &none            &none            &none
&trans           &rgb_ug RGB_EFR  &rgb_ug RGB_SPI  &rgb_ug RGB_EFF  &none            &none            &trans               &none            &none            &none            &none            &none            &trans
&trans           &rgb_ug RGB_BRD  &rgb_ug RGB_TOG  &rgb_ug RGB_BRI  &none            &none            &trans               &mmv MOVE_LEFT   &mmv MOVE_DOWN   &mmv MOVE_UP     &mmv MOVE_RIGHT  &none            &trans
&trans           &rgb_ug RGB_HUD  &rgb_ug RGB_SPD  &rgb_ug RGB_HUI  &none            &none            &trans               &mkp LCLK        &mkp MCLK        &mkp RCLK        &none            &none            &none
&none            &none            &none            &trans           &trans           &trans           &trans               &trans           &trans           &trans           &none            &none
            >;
        };
    };
};
